package week5;

import java.util.*;

class EditDistance {
	
  public static int EditDistance(String s, String t) {
	
	int[][] table = new int[s.length()][t.length()];
	int x = 0;
	int y = 0;
	int diag = 0;
	int left = 0;
	int up = 0;
	int largest = 0;
	
	//build LCS table
	for( int i = 0; i<s.length(); i++ )
	{
		for( int j =0 ; j<t.length(); j++)
		{
			try {
				diag = table[i-1][j-1];
				
			}
			catch(Exception e){
				diag = 0;
			}
			try {
				up = table[i][j-1];
				
			}
			catch(Exception e){
				up = 0;
			}
			try {
				left = table[i-1][j];
				
			}
			catch(Exception e){
				left = 0;
			}
			
			if(left >= up) {
				largest = left;
			}
			else {
				largest = up;
			}
			
			
			if(s.toCharArray()[i] == t.toCharArray()[j])
			{
				table[i][j] = diag + 1;
			}
			else {
				table[i][j] = largest;
				
			}
		}
	}
	
	
	

	//printing grid
	for(int i = 0; i<t.length(); i++ )
	{
		for(int j = 0; j<s.length();j++) {
			System.out.print(table[j][i] + " ");
		}
		System.out.println();
	}
		

	return table[s.length()][t.length()];
		
	}
	

  
  public static void main(String args[]) {
 //   Scanner scan = new Scanner(System.in);

	  String s = "abcdef";
		String t = "azced";
    System.out.println(EditDistance(s, t));
  }

}
